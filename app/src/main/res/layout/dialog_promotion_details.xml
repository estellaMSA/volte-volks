<?xml version="1.0" encoding="utf-8"?>
<layout>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".presentation.ui.activities.PromotionDetailActivity">
    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_close"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:padding="15dp"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <ImageView
        android:id="@+id/img_promotion"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintDimensionRatio="H,6:2"
        tools:src="@drawable/movida_move_voce_logo"
        app:layout_constraintTop_toBottomOf="@+id/include_toolbar"/>
    <TextView
        android:id="@+id/txt_promotion_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_text"
        android:textSize="18sp"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        tools:text="Title"
        app:layout_constraintTop_toBottomOf="@id/img_promotion"/>
    <TextView
        android:id="@+id/txt_promotion_subdescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/secondary_text"
        android:maxHeight="100dp"
        android:textSize="14sp"
        android:scrollbars="vertical"
        tools:text="DescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescription "
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/txt_promotion_title" />
    <TextView
        android:id="@+id/txt_promotion_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="200dp"
        android:textColor="@color/secondary_text"
        android:textSize="12sp"
        android:scrollbars="vertical"
        android:clickable="true"
        tools:text="DescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescription "
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/txt_promotion_subdescription"/>
    <ProgressBar
        android:id="@+id/loading_promotion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="58dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_promotion_description"/>
    <LinearLayout
        android:id="@+id/qr_layout"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:orientation="horizontal"
        android:background="@drawable/background_promotion"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/txt_promotion_description"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:id="@+id/img_qr"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="3dp"/>
        <TextView
            android:id="@+id/txt_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:textColor="@color/primary_text"
            android:gravity="center"
            tools:text="5885ADF5FS"/>
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:id="@+id/btn_see_more"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginLeft="76dp"
        android:layout_marginRight="76dp"
        android:elevation="0dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/txt_promotion_description"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/see_more"
            android:textColor="@color/white" />
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
</layout>