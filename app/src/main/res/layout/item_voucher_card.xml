<?xml version="1.0" encoding="utf-8"?>
<layout>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cv_layout"
        android:layout_width="match_parent"
        android:layout_height="88dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_image_voucher"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintDimensionRatio="W, 16:10"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:background="@drawable/mock_person" />

            <TextView
                android:id="@+id/tv_title_voucher"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:hint="@string/phone"
                android:maxLines="1"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_image_voucher"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Cadeirinha de Bebê adeirinha de Bebê adeirinha de Bebê adeirinha de Bebê adeirinha de Bebê" />

            <TextView
                android:id="@+id/tv_points_voucher"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:hint="@string/phone"
                android:maxLines="1"
                android:textColor="@color/secondary_text"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@id/iv_image_logo"
                app:layout_constraintStart_toEndOf="@id/iv_image_voucher"
                app:layout_constraintTop_toBottomOf="@id/tv_title_voucher"
                tools:text="50 pontos" />

            <ImageView
                android:id="@+id/iv_image_logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/volkswagen_logo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <View
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="0dp"
                android:alpha="0.12"
                android:background="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_title_voucher"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</layout>
