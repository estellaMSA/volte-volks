<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/login_content"
        android:fitsSystemWindows="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/login_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="144dp"
                android:layout_gravity="center"
                android:layout_marginEnd="60dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="80dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/movida_move_voce" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="60dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="24dp"
                android:textColorHint="#61263238"
                android:textSize="16sp">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/login_CPF"
                    android:imeOptions="actionNext"
                    android:inputType="number|text"
                    android:maxLines="1"
                    android:textColor="@android:color/black"
                    android:textColorHint="#61263238"
                    android:textSize="16sp"
                    android:maxLength="14"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="60dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="16dp"
                android:textColorHint="#61263238"
                android:textSize="16sp">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/login_password"
                    android:imeOptions="actionDone"
                    android:inputType="numberPassword"
                    android:maxLines="1"
                    android:textColor="@android:color/black"
                    android:textColorHint="#61263238"
                    android:textSize="16sp"
                    android:maxLength="6"/>

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/bt_login"
                android:layout_width="239dp"
                android:layout_height="41dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_button"
                android:text="@string/button_enter"
                android:textSize="14sp"
                android:textColor="@color/white"/>
        </LinearLayout>

        <TextView
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@color/colorAccent"
            android:text="@string/register"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_register"
            android:background="@drawable/background_login_gradient">
            <TextView
                android:id="@+id/bt_retrieve_password"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="@string/forgot_my_password"
                android:fontFamily="sans-serif"
                android:textAlignment="center"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="@color/white" />
        </FrameLayout>

    </android.support.constraint.ConstraintLayout>

        <include
            android:id="@+id/loading"
            layout="@layout/loading_layout_modal" />
    </FrameLayout>
</layout>