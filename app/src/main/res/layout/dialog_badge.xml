<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.activities.PromotionDetailActivity">
    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_close"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:padding="15dp"
        android:elevation="2dp"
        android:layout_alignParentRight="true"/>
    <ImageView
        android:id="@+id/img_promotion"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:padding="8dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/txt_promotion_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_text"
        android:textSize="18sp"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        tools:text="Title"
        android:layout_below="@+id/img_promotion"/>
    <TextView
        android:id="@+id/txt_promotion_subdescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/secondary_text"
        android:maxHeight="100dp"
        android:textSize="14sp"
        android:scrollbars="vertical"
        tools:text="DescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescription "
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/txt_promotion_title" />


</RelativeLayout>
</layout>