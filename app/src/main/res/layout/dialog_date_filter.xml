<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/filter_by_date"
            android:textColor="@color/dialog_title"
            android:textSize="20sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/dialog_layout_7_days"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="@id/dialog_title"
            app:layout_constraintTop_toBottomOf="@id/dialog_title">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/dialog_button_7_days"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/background_circle" />

            <TextView
                android:id="@+id/dialog_text_7_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="sans-serif"
                android:padding="8dp"
                android:text="@string/seven_days"
                android:textColor="@color/dialog_labels"
                android:textSize="16sp"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_layout_30_days"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="@id/dialog_title"
            app:layout_constraintTop_toBottomOf="@id/dialog_layout_7_days">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/dialog_button_30_days"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/background_circle" />

            <TextView
                android:id="@+id/dialog_text_30_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="sans-serif"
                android:padding="8dp"
                android:text="@string/thirty_days"
                android:textColor="@color/dialog_labels"
                android:textSize="16sp"
                android:textStyle="normal" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/dialog_layout_60_days"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="@id/dialog_title"
            app:layout_constraintTop_toBottomOf="@id/dialog_layout_30_days">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/dialog_button_60_days"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/background_circle" />

            <TextView
                android:id="@+id/dialog_text_60_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="sans-serif"
                android:padding="8dp"
                android:text="@string/sixty_days"
                android:textColor="@color/dialog_labels"
                android:textSize="16sp"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_layout_all_period"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="@id/dialog_title"
            app:layout_constraintTop_toBottomOf="@id/dialog_layout_60_days">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/dialog_button_all_period"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/background_circle" />

            <TextView
                android:id="@+id/dialog_text_all_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="sans-serif"
                android:padding="8dp"
                android:text="@string/all_period"
                android:textColor="@color/dialog_labels"
                android:textSize="16sp"
                android:textStyle="normal" />
        </LinearLayout>

        <Button
            android:id="@+id/dialog_filter_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif-medium"
            android:text="@string/filter"
            android:textColor="@color/md_red_900"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/dialog_layout_all_period"
            app:layout_constraintTop_toBottomOf="@id/dialog_layout_all_period" />

    </android.support.constraint.ConstraintLayout>
</layout>
